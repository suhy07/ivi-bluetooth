<layout>

    <data>

        <import type="com.jancar.bluetooth.ui.device.DeviceItemViewModel" />

        <variable
            name="viewModel"
            type="DeviceItemViewModel" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{viewModel.deviceName}"
                    android:textAppearance="@style/DeviceText"
                    android:textColor="@{viewModel.color}" />

                <TextView
                    android:id="@+id/tv_device_pairing_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.devicePairStatus}"
                    android:textColor="@{viewModel.color}"
                    android:textAppearance="@style/DeviceText"
                    tools:layout_editor_absoluteX="598dp"
                    tools:layout_editor_absoluteY="44dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_device_address"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:text="@{viewModel.deviceAddress}"
                android:textAppearance="@style/DeviceText"
                android:gravity="center"
                android:textColor="@{viewModel.color}" />
            <TextView
                android:id="@+id/tv_device_connect_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@{viewModel.deviceConnectStatus}"
                android:textAppearance="@style/DeviceText"
                android:textColor="@{viewModel.color}"
                tools:layout_editor_absoluteX="600dp"
                tools:layout_editor_absoluteY="85dp" />
        </LinearLayout>
    </LinearLayout>

</layout>