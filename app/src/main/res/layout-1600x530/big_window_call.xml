<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#12131f"
    android:gravity="center_horizontal"
    >

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/callNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/keyboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:id="@+id/incomingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="84dp"
        >
        <TextView
            android:id="@+id/acceptText"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:text="@string/str_answer"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/shape_accept_bg_bak"
            android:layout_marginRight="100dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/smallHangupText"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="@string/str_hang_up"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/shape_hangup_small_bg_bak"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/number1Text"
                    android:text="1"
                    style="@style/style_number_text_600"
                    />
                <TextView
                    android:id="@+id/number2Text"
                    android:text="2"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/number3Text"
                    android:text="3"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/number4Text"
                    android:text="4"
                    style="@style/style_number_text_600"
                    />
                <TextView
                    android:id="@+id/number5Text"
                    android:text="5"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/number6Text"
                    android:text="6"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/number7Text"
                    android:text="7"
                    style="@style/style_number_text_600"
                    />
                <TextView
                    android:id="@+id/number8Text"
                    android:text="8"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/number9Text"
                    android:text="9"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/numberXinText"
                    android:text="*"
                    style="@style/style_number_text_600"
                    />
                <TextView
                    android:id="@+id/number0Text"
                    android:text="0+"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/numberJinText"
                    android:text="#"
                    style="@style/style_number_text_600"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/switchVoiceText"
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:background="@drawable/shape_switch_voice_bg"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bigHangupText"
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:background="@drawable/shape_hangup_big_bg"
                android:text="@string/str_hang_up"
                android:gravity="center"
                android:layout_marginTop="9dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>