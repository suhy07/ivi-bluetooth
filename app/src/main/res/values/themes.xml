    <style name="Theme.Bluetooth" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">16dp</item> <!-- 设置对话框的内边距 -->
    </style>
    <style name="Theme.Bluetooth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bluetooth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyTabLayout">
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    <style name="CallLogText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DeviceText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="style_number_text">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_number_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_number_text_480">
        <item name="android:textSize">45sp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_number_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_number_text_600">
        <item name="android:textSize">45sp</item>
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_number_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_number_text_720">
        <item name="android:textSize">45sp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_number_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:background">@drawable/shape_rounded_layout_grayblue</item>
    </style>
