<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="80dp"
    android:layout_marginEnd="40dp"
    android:orientation="horizontal"
    android:background="#282440">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_unknown_device"
                android:textAppearance="@style/DeviceText"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_device_pairing_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pair_status_unpaired"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="598dp"
                tools:layout_editor_absoluteY="44dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_device_address"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Device Address"
            android:textAppearance="@style/DeviceText"
            android:gravity="center"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_device_connect_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="Not Connected"
            android:textAppearance="@style/DeviceText"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="600dp"
            tools:layout_editor_absoluteY="85dp" />
    </LinearLayout>
</LinearLayout>

